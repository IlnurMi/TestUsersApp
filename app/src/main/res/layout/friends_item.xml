<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_friends_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundItem"
    android:layout_marginBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_friends_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/token"
        android:textColor="@color/nameColor"
        android:textSize="@dimen/nameTextSize"
        android:maxLines="2"
        android:layout_marginStart="@dimen/margin_layout"
        android:layout_marginTop="@dimen/margin_layout"
        android:layout_marginEnd="@dimen/margin_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_friends_active"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_friends_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/token"
        android:textColor="@color/emailColor"
        android:textSize="@dimen/emailTextSize"
        android:maxLines="2"
        android:layout_marginStart="@dimen/margin_layout"
        android:layout_marginEnd="@dimen/margin_layout"
        android:layout_marginTop="@dimen/margin_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_friends_active"
        app:layout_constraintTop_toBottomOf="@id/tv_friends_name" />

    <ImageView
        android:id="@+id/iv_friends_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_active_true"
        android:layout_marginTop="@dimen/margin_layout"
        android:layout_marginBottom="@dimen/margin_layout"
        android:layout_marginEnd="@dimen/margin_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>